{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:css && pnpm build:remix",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "deploy": "wrangler publish",
    "dev:css": "tailwindcss -w -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "pnpm build && pnpm concurrently pnpm:dev:* --kill-others-on-fail",
    "lint": "eslint --cache . --ext .ts,.tsx,.js,.jsx",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "typecheck": " tsc -b"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@remix-run/cloudflare": "^1.6.7",
    "@remix-run/cloudflare-workers": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@types/node": "^18.6.4",
    "@types/react": "^18.0.16",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "miniflare": "^2.6.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.24"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@7.9.0"
}
