{
  "private": true,
  "sideEffects": false,
  "main": "./dist/worker.mjs",
  "exports": "./dist/worker.mjs",
  "scripts": {
    "build": "pnpm clean && pnpm build:css && pnpm build:remix && pnpm build:worker",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "build:worker": "cross-env NODE_ENV=production node ./scripts/build-worker.mjs",
    "clean": "rimraf build public/build dist",
    "deploy-staging": "pnpm build && wrangler publish --env staging",
    "deploy-prod": "pnpm build && wrangler publish --env production",
    "dev": "pnpm build && pnpm concurrently pnpm:dev:* --kill-others-on-fail",
    "dev:css": "tailwindcss -w -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "dev:remix": "remix watch",
    "dev:miniflare": "miniflare dist/worker.mjs --build-command \"node ./scripts/build-worker.mjs\" --modules --no-cache --watch",
    "lint": "eslint --cache . --ext .ts,.tsx,.js,.jsx",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "typecheck": " tsc -b",
    "prepare": "husky install",
    "mdx:compile": "node --experimental-vm-modules ./content/compile.mjs",
    "mdx:upload": "node --experimental-vm-modules ./content/upload.mjs",
    "upload-images": "node -r esbuild-register ./images/index.ts",
    "pw:test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" playwright test",
    "pw:codegen": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" playwright codegen",
    "test": "pnpm build && pnpm pw:test"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@fontsource/abeezee": "^4.5.10",
    "@hcaptcha/react-hcaptcha": "^1.4.4",
    "@headlessui/react": "^1.7.3",
    "@remix-run/cloudflare": "^1.7.2",
    "@remix-run/cloudflare-workers": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-highlight": "^6.0.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.16.0",
    "@mdx-js/esbuild": "^2.1.5",
    "@playwright/test": "^1.27.0",
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.10",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "miniflare": "^2.9.0",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "remark-frontmatter": "^4.0.1",
    "remark-mdx-frontmatter": "^2.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "undici": "^5.11.0",
    "wrangler": "^2.1.10"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@7.10.0"
}
