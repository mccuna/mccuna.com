{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm clean && pnpm build:css && pnpm build:remix",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "clean": "rimraf build public/build dist",
    "dev": "pnpm build && pnpm concurrently pnpm:dev:* --kill-others-on-fail",
    "dev:css": "tailwindcss -w -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "dev:remix": "remix watch",
    "dev:pages": "cross-env NODE_ENV=development pnpm wrangler pages dev ./public",
    "cq": "pnpm concurrently pnpm:cq:*",
    "cq:lint": "eslint --cache . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "cq:typecheck": " tsc -b",
    "mdx:compile": "node --experimental-vm-modules ./content/compile.mjs",
    "mdx:upload": "node --experimental-vm-modules ./content/upload.mjs",
    "upload-images": "node -r esbuild-register ./images/index.ts",
    "pw:test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" playwright test",
    "pw:codegen": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" playwright codegen",
    "test": "pnpm build && pnpm pw:test"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-sentry": "^1.1.0",
    "@fontsource/abeezee": "^4.5.10",
    "@headlessui/react": "^1.7.7",
    "@marsidev/react-turnstile": "^0.0.5",
    "@remix-run/cloudflare": "^1.9.0",
    "@remix-run/cloudflare-pages": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@sentry/react": "^7.28.1",
    "@sentry/remix": "^7.28.1",
    "@sentry/tracing": "^7.28.1",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-highlight": "^6.0.0",
    "tiny-invariant": "^1.3.1",
    "toucan-js": "^3.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18",
    "@mdx-js/esbuild": "^2.2.1",
    "@playwright/test": "^1.29.1",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.10",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "remark-frontmatter": "^4.0.1",
    "remark-mdx-frontmatter": "^2.1.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "undici": "^5.14.0",
    "wrangler": "^2.6.2"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.21.0"
}
